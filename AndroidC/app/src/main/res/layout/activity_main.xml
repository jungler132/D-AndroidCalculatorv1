        android:tag="8"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_9"
        app:layout_constraintStart_toEndOf="@+id/button_7"
        app:layout_constraintTop_toBottomOf="@+id/button_5" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="85dp"
        android:layout_height="102dp"
        android:layout_marginTop="8dp"
        android:onClick="buttonAction"
        android:tag="2"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/button_5"
        app:layout_constraintEnd_toStartOf="@+id/button_3"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:layout_constraintTop_toBottomOf="@+id/button_result" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="85dp"
        android:layout_height="102dp"
        android:layout_marginTop="8dp"
        android:onClick="buttonAction"
        android:tag="3"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/button_6"
        app:layout_constraintEnd_toStartOf="@+id/button_minus"
        app:layout_constraintStart_toEndOf="@+id/button_2"
        app:layout_constraintTop_toBottomOf="@+id/button_multiply" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="85dp"
        android:layout_height="102dp"
        android:layout_marginTop="8dp"
        android:tag="105"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:onClick="buttonPerformance"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/button_plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_3"
        app:layout_constraintTop_toBottomOf="@+id/button_divide" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="85dp"
        android:layout_height="102dp"
        android:layout_marginTop="8dp"
        android:onClick="buttonAction"
        android:tag="1"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/button_4"
        app:layout_constraintEnd_toStartOf="@+id/button_2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_c" />


    <Button
        android:id="@+id/button_c"
        android:layout_width="85dp"
        android:layout_height="102dp"
        android:layout_marginTop="8dp"
        android:tag="101"
        android:text="C"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:onClick="buttonPerformance"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/button_1"
        app:layout_constraintEnd_toStartOf="@+id/button_result"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display"
        app:layout_constraintVertical_bias="0.96" />

    <Button
        android:id="@+id/button_result"
        android:layout_width="85dp"
        android:layout_height="102dp"
        android:layout_marginTop="8dp"
        android:tag="102"
        android:text="="
        android:onClick="buttonPerformance"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/button_2"
        app:layout_constraintEnd_toStartOf="@+id/button_multiply"
        app:layout_constraintStart_toEndOf="@id/button_c"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/button_multiply"
        android:layout_width="85dp"
        android:layout_height="102dp"
        android:layout_marginTop="8dp"
        android:tag="103"
        android:onClick="buttonPerformance"
        android:text="*"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/button_3"
        app:layout_constraintEnd_toStartOf="@+id/button_divide"
        app:layout_constraintStart_toEndOf="@id/button_result"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="85dp"
        android:layout_height="102dp"
        android:layout_marginTop="8dp"
        android:tag="104"
        android:text="/"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:onClick="buttonPerformance"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/button_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_multiply"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <TextView
        android:id="@+id/display"
        android:layout_width="393dp"
        android:layout_height="173dp"
        android:layout_marginTop="8dp"
        android:gravity="center|right"
        android:hint="by inst: @dreame134"
        android:textAllCaps="true"
        android:textColor="@android:color/darker_gray"
        android:textColorHighlight="#E10808"
        android:textColorHint="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/button_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="-1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>